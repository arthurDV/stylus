   <div id="banner" >
    <div class="appearIn text-justify">
       <h1>Styl.us</h1>
          <p>
            Turn your pen into you best friend 
            <br>Make every line you write count.
          </p>

          <a href="#" class="btn btn-rounded btn-lg" data-toggle="modal" data-target="#orderForm">GET YOUR STYLUS</a>
        </div>

        <div class="text-center" style="position: relative; top: 150px; ">
          <a href="#features">
            <i class="fa fa-angle-down pulse" style="font-size: 90px; color: white;"></i>
          </a>
        </div>
     
    </div>

    

    <div class="bg-blue" id="features">



      <div class="container text-center">
      <div class="row">
        <div class="col-xs-12 col-ms-6 col-md-6">
          <div class="card-white" data-sr="wait 2.5s, ease-in-out 100px">
          	<%= image_tag "Database.png" %>
		      <h2>Storing your text</h2>
		      <p>Everything line writen with your stylus is stored in the cloud, so that it's never lost</p>
		      </div>
		        </div>
		        <div class="col-xs-12 col-ms-6 col-md-6">
		          <div class="card-white" data-sr="wait 2.5s, ease-in-out 100px">
		          	<%= image_tag "chart.png" %>
		     
		      <h2>Analytics</h2>
		      <p>Get feedbacks on the way you write, your favorite words, your frequent mistakes</p>
		      </div>
    </div>
        </div>
      </div>
    </div>





      
      

    <div class="card" id="newsletter">
      <h2>Get news from stylus</h2>
      <p>Leave us your mail and get stylus news</p>
      <form action="" class="form-inline">
        <input type="email" class="form-control" placeholder="Ton email">
        <input type="submit" value="Subscribe" class='btn btn-rounded'>
      </form>
    </div>

  <div id="testimonials" class= "padded">

    <div class="container text-center">
      <div class="row">
         
         <% data.testimonials.each do |testimonial| %>
         <div class="col-xs-12 col-sm-6">
          <div class="testimonial slideExpandUp">
            <%= image_tag testimonial.image_file, class: "img-circle" %>
            <h3><%= testimonial.name %></h3>
            <p><%= testimonial.content %></p>
          </div>
         </div>
           
            <% end %> 
        
      </div>
    </div>
  </div>



